<%- include('partials/header') %>
<div class="main_view_page">
    <h1 class="text-center mb-3">Show random recipe</h1>

    <% if (randomRecipe != null) { %>
        <div class="row mt-3  no-gutters justify-content-center">
            <img src="<%= randomRecipe.image %>" alt="">
        </div>

        <h2 class="mt-3 text-center"><%= randomRecipe.title %></h2>

        <p>Cooking time: <span class="text-warning"><%= randomRecipe.readyInMinutes %></span></p>
        <p>Dish types: <span class=""><%= randomRecipe.dishTypes %></span></p>
        <p>Diets: <span class=""><%= randomRecipe.diets %></span></p>
        <p>Servings: <span class=""><%= randomRecipe.servings %></span></p>

        <div class="table-responsive">
            <table class="table table-hover mt-5">
                <thead>
                <tr class="d-flex">
                    <th class="col-4">Name</th>
                    <th class="col-4">Amount</th>
                    <th class="col-4">Unit</th>
                </tr>
                </thead>
                <tbody>
                <% randomRecipe.extendedIngredients.forEach(item => { %>
                    <tr class="d-flex">
                        <td class="col-4"><%= item.name %></td>
                        <td class="col-4"><%= item.amount %></td>
                        <td class="col-4"><%= item.unit %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    <% } %>
</div>
<!-- /.main_view_page -->
<%- include('partials/footer') %>